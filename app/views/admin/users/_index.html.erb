<table class='table'style="table-layout: fixed;">
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th>フォロー数</th>
      <th>フォロワー数</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% users.each do |user| %>
      <tr>
        <td>
          <% if user.image.attached? %>
            <%= image_tag user.get_image(50, 50), class: "bd-placeholder-img mr-3 rounded-circle", width: "50", height: "50"  %>
          <% else %>
            <%= image_tag 'no_image.jpg', size: '50x50', class: "bd-placeholder-img mr-3 rounded-circle" %>
          <% end %>
        </td>
        <td style="word-wrap: break-word;"><%= link_to user.name, admin_user_path(user.id) %></td>
        <td><%= link_to user.followings.count, admin_user_followings_path(user.id) %></td>
        <td><%= link_to user.followers.count, admin_user_followers_path(user.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

