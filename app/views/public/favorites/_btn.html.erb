<% if current_user && article.present? && article.favorited_by?(current_user) %>
  <%= link_to article_favorites_path(article), method: :delete,  style: "color: red;" do %>
    <i class="fas fa-heart" aria-hidden="true"></i>
    <%= article.favorites.count %>
  <% end %>
<% else %>
  <%= link_to article_favorites_path(article), method: :post do %>
    <i class="fas fa-heart" aria-hidden="true"></i>
    <%= article.favorites.count %>
  <% end %>
<% end %>

