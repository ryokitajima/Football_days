<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-xs-1"></div>
    <div class="col-xs-9">
      <h2 class="p-3 mb-2 bg-light text-dark text-center">新規会員登録</h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
  
        <div class="text-center">
          <%= f.label :"ニックネーム" %><br />
          <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
        </div>

        <div class="text-center">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="text-center">
          <%= f.label :password %>
          <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %>文字以上)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="text-center">
          <%= f.label :"password(確認用)" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
        
        <div class="text-center">
          <%= f.submit "登録する", class: "btn btn-success" %>
        </div>
        <% end %>
        <div class="text-center">
        <p>既に登録済みの方はログインしてください</p>
        <%= link_to "ログイン", new_user_session_path, class: "btn btn-primary" %>
        </div>
    </div>
  </div>
</div>

