<div class="container">
  <div class="row">
    <div class="col">
      <div class="card col">
        <% if @model == 'user' %>
        	<h3 class="text-center">Users検索結果"<%= @content %>"</h3>
          <%= render 'public/users/index', users: @records %>
        <% elsif @model == 'article' %>
        	<h3 class="text-center">投稿記事タイトル検索結果"<%= @content %>"</h3>
          <%= render 'public/articles/index', articles: @records %>
        <% end %>
      </div>
    </div>
  </div>
</div>
