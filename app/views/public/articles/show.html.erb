<div class="container">
  <div class="row">
    <div class="col-md-3">
       <% if @user.image.attached? %>
        <%= image_tag @user.get_image(200, 200)  %>
       <% else %>
        <%= image_tag 'no_image', size: "200x200" %>
       <% end %>
      <div class="card-body">
        <h5 class="card-title"><%= link_to @user.name, user_path(@user.id) %></h5>
      </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item">フォロー</li>
    <li class="list-group-item">フォロワー</li>
  </ul>
    <div class="card-body">
      <%= link_to "フォロー", class: "btn btn-light" %>
    </div>
    </div>
    <div class="col">
      <div class="card-body text-center">
        <h4 class="card-title"> <%= @article.title %></h4>
        <% if @article.user == current_user %>
        <%= link_to "記事を編集する", edit_article_path(@article.id),class: "btn btn-success" %> 
        <% end %>
      </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item"><%= image_tag @user.get_image(50, 50) %> <%= @user.name %> <%= @article.created_at.strftime('%Y/%m/%d') %></li>
  </ul>
  <div class="card">
  <div class="card-body">
    <%= @article.body %>
  </div>
</div>
    </div>
    </div>

  </div>
</div>

