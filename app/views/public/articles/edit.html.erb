<div class="container">
  <div class="row">
    <div class="col"> 
     <%= form_with model: @article, url: article_path(@article.id), method: :patch do |f| %>
      <div class="mb-3 col">
        <label for="exampleFormControlInput1" class="form-label">タイトル</label>
        <%= f.text_field :title , class:"form-control" %>
      </div>
      <div class="mb-3 col">
        <label for="exampleFormControlInput1" class="form-label">本文</label>
        <%= f.text_area :body , class:"form-control",rows:"3" %>
      </div>
      <div class="mb-3 col">
        <%= f.submit '編集内容を保存', class: "btn btn-success"  %> <%= link_to "記事を削除する", article_path(@article.id), method: :delete, "data-confirm" => "本当に消しますか？", class:"btn btn-danger" %>
      </div>
     <% end %>
    </div>
  </div>
</div>