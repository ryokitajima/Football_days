<table class='table table-hover table-inverse'>
  <tbody>
    <% articles.each do |article| %>
      <tr>
        <td><%= link_to(article.user) do %>
          <%= image_tag article.user.get_image(50,50) %>
          <% end %>
        </td>
        <td><%= link_to article.title,article, class: "article_#{article.id}" %></td>
        <td><%= article.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>
