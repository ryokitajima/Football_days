<table class='table'style="table-layout: fixed;">
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th>フォロー数</th>
      <th>フォロワー数</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% users.each do |user| %>
      <tr>
        <td>
          <% if user.image.attached? %>
            <%= image_tag user.get_image(50, 50), class: "bd-placeholder-img mr-3 rounded-circle", width: "50", height: "50" %>
          <% else %>
            <%= image_tag 'no_image', size: '50x50', class: "bd-placeholder-img mr-3 rounded-circle" %>
          <% end %>
        </td>
        <td style="word-wrap: break-word;"><%= link_to user.name, user_path(user.id) %></td>
        <td><%= link_to user.followings.count, user_followings_path( user.id) %></td>
        <td><%= link_to user.followers.count, user_followers_path( user.id) %></td>
        <td>
          <% if user_signed_in? && current_user != user %>
            <% if current_user.following?(user) %>
              <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, class: "btn btn-info" %>
            <% elsif user.is_deleted == true %>
             <h6>既に退会済みです</h6>
             <% else %>
              <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class: "btn btn-success" %>
            <% end %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
