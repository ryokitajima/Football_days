<div class="container">
  <div class="row justify-content-md-center">
    <div class="col text-center">
      <h4 class="p-3 mb-2 text-center ">会員情報編集</h4>
      <%= form_with model: @user, url: user_path(current_user.id), method: :patch do |f| %>
       <h6>Image</h6>
       <%= f.file_field :image, placeholder: "Image", accept: "image/*" %> 
       <h6>ニックネーム</h6>
       <%= f.text_field :name %>
       <h6>メールアドレス</h6>
       <%= f.text_area :email %>
      <div>
         <%= f.submit '編集内容を保存', class: "btn btn-success btn-sm text-center" %>  <%= link_to "退会する", unsubscribe_user_path(current_user), class: "btn btn-danger btn-sm" %>
      </div>
      <% end %>
    </div>
  </div>
</div>
 
 